# =============================================================================
# HE-300 Benchmark Integration - Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG_MODE=false

# -----------------------------------------------------------------------------
# EthicsEngine Enterprise Integration
# -----------------------------------------------------------------------------
EEE_ENABLED=true
EEE_BASE_URL=http://eee:8080
EEE_TIMEOUT_SECONDS=300
EEE_BATCH_SIZE=50
EEE_RETRY_COUNT=3
EEE_RETRY_DELAY=1.0

# -----------------------------------------------------------------------------
# CIRISNode Settings
# -----------------------------------------------------------------------------
CIRISNODE_PORT=8000
JWT_SECRET=change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=cirisnode
DATABASE_URL=postgresql://postgres:password@db:5432/cirisnode

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
LLM_PROVIDER=ollama
LLM_MODEL=llama3.2
OLLAMA_BASE_URL=http://ollama:11434

# OpenAI (if using)
# OPENAI_API_KEY=sk-...

# Anthropic (if using)
# ANTHROPIC_API_KEY=...

# -----------------------------------------------------------------------------
# HE-300 Benchmark Settings
# -----------------------------------------------------------------------------
HE300_ENABLED=true
HE300_SAMPLE_SIZE=300
HE300_BATCH_SIZE=50
HE300_SEED=42
HE300_TIMEOUT=3600

# -----------------------------------------------------------------------------
# Docker Registry
# -----------------------------------------------------------------------------
DOCKER_REGISTRY=ghcr.io
DOCKER_ORG=rng-ops
IMAGE_TAG=latest

# -----------------------------------------------------------------------------
# Fork/Branch Configuration (CI/CD)
# -----------------------------------------------------------------------------
CIRISNODE_FORK=rng-ops/CIRISNode
CIRISNODE_BRANCH=feature/eee-integration
EEE_FORK=rng-ops/ethicsengine_enterprise
EEE_BRANCH=feature/he300-api

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FF_MOCK_LLM=false
FF_SIGNATURE_VERIFICATION=true
FF_RESULT_CACHING=true
FF_DETAILED_LOGGING=false

# -----------------------------------------------------------------------------
# UI (CIRISNode Frontend)
# -----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3004
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXTAUTH_SECRET=change-this-in-production

# OAuth (optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=
